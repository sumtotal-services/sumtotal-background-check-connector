{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Settings": {
    "ConnectorId": "BGcheckconnector",
    "ConnectorSecret": "BGCheckConnector",
    "SumtOAuthSettings": {
      "Authority": "https://#############/apisecurity",
      "Scope": "allapis",
      "ClientId": "BGOAuthClient",
      "ClientSecret": "BGOAuthClient"
    },
    "Vendors": [
     
      {
        "VendorId": "CheckrConnector",
        "VendorOAuthSettings": {
          "SumtCallBackUrl": "https://#################/apis/api/v1/requisitions/applicants/{applicantId}/check-results",
          "VendorOauth": "########/oauth/token",
          "VendorUser": "#####################",//checkr user id
          "VendorPassword": "",
          "BaseUrl": "######################" //checkr base url
        }
      }
      
    ]
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.RollingFile",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.AspNetCore.Authentication.Cookies.CookieAuthenticationHandler": "Verbose",
        "Microsoft.AspNetCore.Authentication.WsFederation": "Verbose",
        "Microsoft.IdentityModel.Tokens": "Verbose",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs\\ConnectorLog-all-{Date}.txt",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": "50",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Console": {
    "LogLevel": {
      "Default": "None"
    }
  }
}