{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Settings": {
    "ConnectorId": "Bgcheckconnector",
    "ConnectorSecret": "Bgcheckconnector",
    "SumtOAuthSettings": {
      "Authority": "https://localhost:44330/",
      "Scope": "allapis",
      "ClientId": "Bgcheckconnector",
      "ClientSecret": "Bgcheckconnector"
    },
    "Vendors": [
      {
        "VendorId": "checkrConnector",
        "VendorOAuthSettings": {
          "SumtCallBackUrl": "{Host}/restapis/api/v1/requisitions/updateChecks",
          "VendorOauth": "https://#######/oauth/token",
          "VendorUser": "checkrClient",
          "VendorPassword": "checkrClientSecret",
          "BaseUrl": "https://################/" //base url
        }
      }
      
    ]

  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.AspNetCore.Authentication.Cookies.CookieAuthenticationHandler": "Verbose",
        "Microsoft.AspNetCore.Authentication.WsFederation": "Verbose",
        "Microsoft.IdentityModel.Tokens": "Verbose",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          // Change the pathFormat below to change the log file name and path
          "pathFormat": "C:\\Data\\Temp\\ConnectorLog-all-{Date}.txt",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error",
          "retainedFileCountLimit": "50",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}"
        }
      }
    ]
  },

  "Console": {
    "LogLevel": {
      "Default": "None"
    }
  }
}
